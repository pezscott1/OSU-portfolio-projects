<h1>Customers</h1>
{{! We used Copilot to help generate the correct phone number syntax for html. }}


{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each customers.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, first_name, last_name, email, fine_total, and phone_number}}
        {{#each customers}}
        <tr>
            <td>{{this.customerId}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.fineTotal}}</td>
            <td>{{this.phoneNumber}}</td>

            {{! DELETE form }}
            <td>
            <form id='delete_person_form' method='POST' action='/Customers/delete'>
                <input type='hidden' name='delete_customer_id' value='{{this.customerId}}' />
                <input type='hidden' name='delete_customer_name' value='{{this.firstName}} {{this.lastName}}' />
               
                {{! syntax for confirm on submit buttons on each page via Copilot}}
                <button type='submit' onclick="return confirm('Are you sure you want to delete this customer?');">
                    Delete
                </button>

            </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Customer</h2>
    {{#if errorMessage}}
    <p style="color: red;">{{errorMessage}}</p>
    {{/if}}

<form class='cuForm' id='create_customer_form' method='POST' action='/Customers/create'>

    <label for='create_customer_first_name'>First Name: </label>
    <input type='text' name='create_customer_first_name' id="create_customer_first_name" />

    <label for='create_customer_last_name'>Last Name: </label>
    <input type='text' name='create_customer_last_name' id="create_customer_last_name" />

    <label for='create_customer_email'>Email: </label>
    <input type='email' name='create_customer_email' id="create_customer_email" />

    <label for='create_customer_phone_number'>Phone number: </label>
    <input type="text" name="create_customer_phone_number" id="create_customer_phone_number" 
            pattern="^$|^\d{3}-\d{3}-\d{4}$"  placeholder="123-456-7890" />

    <label for='create_customer_fine'>Fine amount: </label>
     <input type="number" id="create_customer_fine" name="create_customer_fine" min="0" step="0.01" placeholder="0.00">


    <input type='submit' />

</form>

{{! UPDATE form }}
<h2>Update a Customer</h2>
    {{#if errorMessage}}
    <p style="color: red;">{{errorMessage}}</p>
    {{/if}}

<form class='cuForm' id='update_customer_form' method='POST' action='/Customers/update'>

    <label for='update_customer_id'>Customer to Update: </label>
    <select name='update_customer_id' id="update_customer_id" required>
        <option value='' disabled selected>Select a Customer</option>
        {{#each customers}}
        <option value='{{this.customerId}}' required>
            {{this.firstName}}
            {{this.lastName}}
        </option>
        {{/each}}
    </select>

    <label for='update_customer_email'>Email: </label>
    <input type='text' name='update_customer_email' id="update_customer_email"/>

    <label for='update_customer_phone_number'>Phone number: </label>
    <input type="text" name="update_customer_phone_number" id="update_customer_phone_number" 
        pattern="^$|^\d{3}-\d{3}-\d{4}$" placeholder="123-456-7890" />

    <label for='update_customer_fine'>Fine amount: </label>
     <input type="number" id="update_customer_fine" name="update_customer_fine" min="0" step="0.01" placeholder="0.00">
  
    <input type='submit' />
</form>