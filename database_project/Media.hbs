<h1>Media</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each media.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, title, author, is_electronic, checked_out, and media_type}}
        {{#each media}}
        {{! Syntax for using an #if inside an #each was borrowed from Copilot.}}
        <tr>
            <td>{{this.id_media}}</td>
            <td>{{this.title}}</td>
            <td>{{this.creator}}</td>      
            <td>{{#if this.isElectronic}}Yes{{else}}No{{/if}}</td>
            <td>{{#if this.checkedOut}}Yes{{else}}No{{/if}}</td>
            <td>{{this.mediaType}}</td>
   
            {{! DELETE form }}
            <td>
            <form id='delete_media_form' method='POST' action='/Media/delete'>
                <input type='hidden' name='delete_media_id' value='{{this.id_media}}' />
                <input type='hidden' name='delete_media_title' value='{{this.title}}' />
              
                <button type='submit' onclick="return confirm('Are you sure you want to delete this Media?');">
                    Delete
                </button>
            </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create Media</h2>
<form class='cuForm' id='create_media_form' method='POST' action='/Media/create'>
    <label for='create_media_title'>  Title: </label>
    <input type='text' name='create_media_title' id='create_media_title' required />

    <label for='create_media_author_director_artist'>  Author, Director, or Artist: </label>
    <input type='text' name='create_media_author_director_artist' id='create_media_author_director_artist' />

    <label for='create_media_is_electronic'>  Electronic status:  </label>
     <select name='create_media_is_electronic' id='create_media_is_electronic'>
        <option value='NULL' selected>Electronic media? </option>
        <option value='1'>Yes</option>
        <option value='0'>No</option>
    </select>

    <label for='create_media_checked_out'>  Checked out:  </label>
     <select name='create_media_checked_out' id='create_media_checked_out'>
        <option value='NULL' selected>Check out status: </option>
        <option value='1'>Yes</option>
        <option value='0'>No</option>
    </select>

    <label for='create_media_type'>  Media Type: </label>
    <select name='create_media_type' id='create_media_type'>
        <option value='NULL' selected>Select media type: </option>
        <option value='book'>Book</option>
        <option value='movie'>Movie</option>
        <option value='music'>Music</option>
        {{#each media_type}}
        <option>  </option>
        {{/each}}
    </select>

    <input type='submit' value="Create media"/>
</form>

{{! UPDATE form }}

<h2>Update Media</h2>
<form class='cuForm' id='update_media_form' method='POST' action='/Media/update'>

    <label for='update_media_id'>Media to Update:</label>
    <select name='update_media_id' id='update_media_id' required>
        <option value='' disabled selected>Select Media</option>
        {{#each media}}
        <option value='{{this.id_media}}'>
            {{this.title}}
            {{this.creator}}
        </option>
        {{/each}}
    </select>

    <label for='update_media_is_electronic'>Electronic status:</label>
    <select name='update_media_is_electronic' id='update_media_is_electronic'>
        <option value='NULL' selected>Electronic media?</option>
        <option value='1'>Yes</option>
        <option value='0'>No</option>
    </select>

    <label for='update_media_checked_out'>Checked out:</label>
    <select name='update_media_checked_out' id='update_media_checked_out'>
        <option value='NULL' selected>Check out status:</option>
        <option value='1'>Yes</option>
        <option value='0'>No</option>
    </select>

    <label for='update_media_type'>Media Type:</label>
    <select name='update_media_type' id='update_media_type'>
        <option value='' disabled selected>Select type</option>
        <option value='book'>Book</option>
        <option value='movie'>Movie</option>
        <option value='music'>Music</option>
    </select>

    <input type='submit' value='Update Media' />
</form>
